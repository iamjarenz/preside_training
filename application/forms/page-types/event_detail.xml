<?xml version="1.0" encoding="UTF-8"?>
<form i18nBaseUri="page-types.event_detail:">

	<tab id="main">
		<fieldset id="main">
			<field binding="page.right_content"           />
			<field binding="page.bottom_content"          />
			<field binding="event_detail.start_date"      />
			<field binding="event_detail.end_date"        />
			<field binding="event_detail.region"          />
			<field binding="event_detail.category"        />
			<field binding="event_detail.programmes"      />
			<field binding="event_detail.documents" control="assetPicker" allowedTypes="document" />
		</fieldset>
	</tab>
	<tab id="event_booking">
		<fieldset id="event_booking">
			<field binding="event_detail.bookable"        />
			<field binding="event_detail.price"           />
			<field binding="event_detail.available_seats" />
			<field binding="event_detail.sessions"        />
		</fieldset>
	</tab>
</form>