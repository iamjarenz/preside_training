<?xml version="1.0" encoding="UTF-8"?>
<form i18nBaseUri="event-booking.booking_details:">
	<tab id="main">
		<fieldset id="event_booking">
			<field name="firstname"       control="textInput"    required="true" />
			<field name="lastname"        control="textInput"    required="true" />
			<field name="email"           control="emailInput"   required="true"  />
			<field name="number_seats"    control="spinner"      required="true" minvalue="1" maxvalue="10" step="1" defaultValue="1" />
			<field name="total_amount"    control="textInput"    readOnly="true"     />
			<field name="session"         control="checkboxList" required="true" />
			<field name="special_request" control="textarea"     rows="7" />
		</fieldset>
	</tab>
</form>